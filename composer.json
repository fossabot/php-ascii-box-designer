{
    "name": "terremoth/php-ascii-box-drawer",
    "description": "Simple app that draws rectangles using ASCII chars",
    "type": "project",
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "vimeo/psalm": "^5.0",
        "nikic/php-parser": "^4.10"
    },
    "license": "GPL-3.0-or-later",
    "autoload": {
        "psr-4": {
            "BoxDesigner\\": "src/BoxDesigner"
        }
    },
    "autoload-dev": {
        "BoxDesigner\\Tests\\": "tests/BoxDesigner"
    },
    "authors": [
        {
            "name": "terremoth",
            "email": "dutra.astro@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "scripts": {
        "fix": "phpcbf",
        "lint": "phpcs",
        "analyze": "psalm --shepherd --no-cache",
        "test": "vendor/bin/phpunit tests",
        "ci": [
            "@composer lint",
            "@composer analyze",
            "@composer test"
        ],
        "build": [
            "@composer fix",
            "@composer lint",
            "@composer analyze",
            "@composer test"
        ]
    }
}
